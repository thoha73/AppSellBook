<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icon_account"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tho Ha"
                    android:textColor="#2C5086"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/user_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/edit_avatar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_camera"
                android:layout_marginStart="-140dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_notification"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_marginBottom="25dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_notifications"
                android:text="Notification"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_mycart"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/ic_cart"
                android:text="My Cart"
                android:textAlignment="textStart"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:drawablePadding="16dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="30dp" />

            <Button
                android:id="@+id/btn_myhictory"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/ic_hictory"
                android:text="My Hictory"
                android:textAlignment="textStart"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:drawablePadding="16dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="25dp" />

            <Button
                android:id="@+id/btn_changepassword"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/ic_changepassword"
                android:text="Change password"
                android:textAlignment="textStart"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:drawablePadding="16dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="25dp" />

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_edit"
                android:drawablePadding="16dp"
                android:text="Edit profile"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" />
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F5F5F5"
                android:drawableRight="@drawable/ic_logout"
                android:textSize="27sp"
                android:text="Log out"
                android:textAlignment="textEnd"
                android:textColor="#FF5722" />
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        android:background="#D5D1D1"
        />


</RelativeLayout>
