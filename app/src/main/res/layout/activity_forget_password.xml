<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/forgotpass"
    tools:context=".activities.ForgetPassword">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUÊN MẬT KHẨU"
        android:gravity="center"
        android:textColor="#8E1292"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐỂ TIẾP TỤC"
        android:letterSpacing="0.2"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#E7D3E7"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/edt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:backgroundTint="@null"
        android:background="@drawable/background_user"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/user_solid__1_"
        android:drawablePadding="15dp"
        android:paddingLeft="15dp"
        android:hint="Tên đăng nhập"
        android:textColorHint="#A14EAA"
        android:elevation="5dp"
        />
    <EditText
        android:id="@+id/edt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:backgroundTint="@null"
        android:background="@drawable/background_user"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/lock_solid"
        android:drawableRight="@drawable/eye_solid"
        android:drawablePadding="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:hint="Password"
        android:textColorHint="#A14EAA"
        android:elevation="5dp"
        android:visibility="gone"
        />
    <EditText
        android:id="@+id/edt_confirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:backgroundTint="@null"
        android:background="@drawable/background_user"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/lock_solid"
        android:drawableRight="@drawable/eye_solid"
        android:drawablePadding="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:hint="Confirm password"
        android:textColorHint="#A14EAA"
        android:elevation="5dp"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_signup"
        app:backgroundTint="@null"
        android:text="TIẾP TỤC"
        android:textSize="20dp"
        android:textColor="#A152A4"
        android:layout_marginTop="50dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐĂNG NHẬP"
        android:textSize="20dp"
        android:textColor="#E5A425"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:id="@+id/textView_Login"
        android:layout_marginTop="30dp"
        />


</LinearLayout>