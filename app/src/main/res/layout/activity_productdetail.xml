<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProductDetail">



        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E9EAEF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="416dp"
                android:layout_height="272dp" />

            <TextView
                android:id="@+id/textViewNameProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10sp"
                android:text="Third pronunciations of history"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E9EAEF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPriceProduct"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="200.000đ"
                    android:textColor="#E91010"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/heart"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="#E9EAEF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSold"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15dp"
                    android:text="Đã bán: 100"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="32dp"
                    android:layout_height="50dp"
                    android:paddingTop="10dp"
                    app:srcCompat="@drawable/cart_plus" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textViewDescription_Detail"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:text="Mô tả"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btn_review"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Xem trước"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:backgroundTint="#EB7F3B"/>
            </LinearLayout>


            <TextView
                android:id="@+id/textViewContentDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:text="Sách Third pronunciation of history thuộc thể loại self-help luôn dẫn đầu về lượng bán, nổi tiếng và có tầm ảnh hưởng rất lớn."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/isbn" />

                <TextView
                    android:id="@+id/textViewContentISBN"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="10sp"
                    android:text="ISBN: 893095601684"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/category" />

                <TextView
                    android:id="@+id/textViewContentCategory"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="10sp"
                    android:text="Thể loại: Sách tự lực"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/author" />

                <TextView
                    android:id="@+id/textViewContentAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="10sp"
                    android:text="Tác giả: Dale Carnegie"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/producer" />

                <TextView
                    android:id="@+id/textViewContentPublisher"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="10sp"
                    android:text="Nhà xuất bản: HKVBOOK"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#D5D1D1"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu" />
</RelativeLayout>