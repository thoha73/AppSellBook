<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9EAEF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#BF9452"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageV_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_back"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Đăng sản phẩm"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!--        <ImageView-->
        <!--            android:paddingTop="20dp"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:src="@drawable/bookmark"/>-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/textView_bookname"
                        android:layout_width="130dp"
                        android:layout_height="36dp"
                        android:text="Tên sách:"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/editTextbookname"
                        android:layout_width="295dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <TextView
                            android:id="@+id/textView_ISBN"
                            android:layout_width="130dp"
                            android:layout_height="36dp"
                            android:text="ISBN:"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/editTextISBN"
                            android:layout_width="295dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="text" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/textView_Category"
                        android:layout_width="130dp"
                        android:layout_height="36dp"
                        android:text="Thể loại:"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/spn_category"
                        android:layout_width="242dp"
                        android:layout_height="36dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/textView_Author"
                        android:layout_width="130dp"
                        android:layout_height="36dp"
                        android:text="Tác giả:"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/spn_author"
                        android:layout_width="242dp"
                        android:layout_height="36dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/textView_Publisher"
                        android:layout_width="130dp"
                        android:layout_height="36dp"
                        android:text="Nhà xuất bản:"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/editTextPublisher"
                        android:layout_width="295dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text" />

                </LinearLayout>

                <LinearLayout
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_Price"
                        android:layout_width="130dp"
                        android:layout_height="36dp"
                        android:text="Giá bán:"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/editTextPrice"
                        android:layout_width="295dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text" />

                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_Quantity"
                        android:layout_width="130dp"
                        android:layout_height="36dp"
                        android:text="Số lượng:"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/editTextQuantity"
                        android:layout_width="295dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number" />

                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView_Description"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Mô tả:"
                        android:textSize="20dp" />


                </LinearLayout>

                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_inputdescription"
                    android:hint="       Nhập mô tả" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hình ảnh"
                    android:textSize="20dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ln_AddImage"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_inputdescription"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_SelectedImage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:backgroundTint="#D9D9D9"
                            android:clipToOutline="true"
                            android:elevation="4dp"
                            android:outlineProvider="background"
                            android:text="+"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Thêm"
                            android:textSize="16dp" />


                    </LinearLayout>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="110dp"
                        android:id="@+id/imgBookSelected"
                        />
                </LinearLayout>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Hình ảnh preview"
                    android:textSize="20dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:id="@+id/ln_AddImage1"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_inputdescription"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_SelectedImage1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:backgroundTint="#D9D9D9"
                            android:clipToOutline="true"
                            android:elevation="4dp"
                            android:outlineProvider="background"
                            android:text="+"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Thêm"
                            android:textSize="16dp" />


                    </LinearLayout>
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:id="@+id/imgBookSelected1"
                        android:layout_marginRight="10dp"
                        />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:id="@+id/imgBookSelected2"
                        android:layout_marginRight="10dp"
                        />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:id="@+id/imgBookSelected3"
                        android:layout_marginRight="10dp"
                        />

                </LinearLayout>
                <Button
                    android:id="@+id/btn_Post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#479B4B"
                    android:layout_gravity="center"
                    android:text="ĐĂNG"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu2"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        android:background="#D5D1D1"
        />

</RelativeLayout>