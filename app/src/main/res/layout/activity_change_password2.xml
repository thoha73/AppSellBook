<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ChangePassword">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#BE9352"
            android:paddingLeft="10dp"
            >
            <ImageView
                android:id="@+id/imageV_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Thay đổi mật khẩu"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#D91C1C"
                android:text="Mật khẩu của bạn phải có tối thiểu 6 ký tự, bao gồm số, chữ cái và ký tự đặc biệt (!@#$%)"/>

        </LinearLayout>
        <EditText
            android:id="@+id/current_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nhập mật khẩu hiện tại"
            android:layout_marginTop="60dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:paddingLeft="14dp"
            android:textColorHint="@color/black"
            android:background="@drawable/bk_changepassword"/>
        <EditText
            android:id="@+id/new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nhập mật khẩu mới"
            android:layout_marginTop="40dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:paddingLeft="14dp"
            android:textColorHint="@color/black"
            android:background="@drawable/bk_changepassword"/>
        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu mới"
            android:layout_marginTop="40dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:paddingLeft="14dp"
            android:textColorHint="@color/black"
            android:background="@drawable/bk_changepassword"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn quên mật khẩu ?"
            android:textColor="#495ED9"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="20dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_change_blue"
            app:backgroundTint="@null"
            android:layout_gravity="center"
            android:text="Dổi mật khẩu"
            android:textSize="20sp"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu2"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        android:background="#D5D1D1"
        />
</RelativeLayout>