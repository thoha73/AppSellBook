<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="UseSwitchCompatOrMaterialXml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:background="#BF9452"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageV_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Thanh Toán"
                android:textColor="#ffffff"
                android:textSize="32dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:id="@+id/listview_ordertotal"
            android:layout_width="match_parent"
            android:layout_height="109dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vận chuyển tiêu chuẩn"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="Từ Thành phố Đà Nẵng"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Miễn phí"
                    android:textColor="#4161D3"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Ngày giao hàng dự kiến:"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="06/10 - 08/10"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:text="Thanh toán bằng điểm thưởng"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-10.000đ"
                    android:textColor="#DEB8B7B3" />

                <Switch
                    android:id="@+id/switchbtn_bypoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:textOff=""
                    android:textOn=""
                    android:thumbTint="@color/white"
                    android:trackTint="#0DD90D" />

            </LinearLayout>


            <TextView
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="10dp"
                android:text="Tóm tắt đơn hàng"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:text="Tổng cộng"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="100.000đ"
                    android:textColor="#BB2B2B"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:text="Điểm thưởng"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="-10.000đ"
                    android:textColor="#BB2B2B"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:text="Vận chuyển"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0đ"
                    android:textColor="#BB2B2B"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:text="Tổng"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="90.000đ"
                    android:textColor="#BB2B2B"
                    android:textSize="15dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="8dp"
                android:text="Phương thức thanh toán"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:text="Thanh toán khi giao hàng"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Switch
                    android:id="@+id/switchbtn_bycash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:checked="true"
                    android:gravity="center"
                    android:textOff=""
                    android:textOn=""
                    android:thumbTint="@color/white"
                    android:trackTint="#0DD90D" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:text="Thanh toán qua thẻ"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Switch
                    android:id="@+id/switchbtn_Banking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:checked="false"
                    android:gravity="center"
                    android:textOff=""
                    android:textOn=""
                    android:thumbTint="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <RadioButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Điều khoản sử dụng và bán hàng của HKVBOOK"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:text="Tổng"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="90.000 đ"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_purchase"
            android:layout_width="295dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#EA8713"
            android:text="Đặt hàng" />
    </LinearLayout>


</RelativeLayout>

