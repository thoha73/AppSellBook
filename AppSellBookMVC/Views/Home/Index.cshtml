@{
    
    ViewData["Title"] = "Home Page";
    var orders = ViewBag.Orders as List<Order>;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    </div>

    <!-- Content Row -->
    <div class="row">

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Số lượng sách
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Doanh thu
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">$215,000</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Requests Card Example -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Số lượng đơn hàng
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">18.000</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <!-- start -->
    <div class="container-fluid px-4">
        <div class="row">
            <!-- Cột sản phẩm -->
            <div class="col-xl-12 col-lg-12 col-md-12" style="height: auto;">
                <div class="card shadow mb-4" style="height: 100%;">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Sản phẩm</h6>
                        <div class="ml-auto delete-icon mr-3" style="cursor:pointer" onclick="deleteSelectedProducts()"><i class="fa-solid fa-trash"></i></div>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                                 aria-labelledby="dropdownMenuLink">
                                <div class="dropdown-header">Thao tác:</div>
                                <a class="dropdown-item" href="taosanpham.html">Thêm sản phẩm</a>
                                <a class="dropdown-item" href="capnhatsanpham.html">Sửa sản phẩm</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Xóa sản phẩm</a>
                            </div>
                        </div>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body" style="height: auto; overflow-y: auto;">
                        @foreach (var book in ViewBag.Books as List<AppSellBookMVC.Models.Book>)
                        {
                            <div class="row mb-3 p-3" data-book-id="@book.bookId" style="border: 1px solid #ddd; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                                <div class="col-1 d-flex justify-content-center align-items-center">
                                    <input type="checkbox" style="width: 30px; height: 30px;">
                                </div>
                                <div class="col-2">
                                    @{
                                        var firstImage = book.images?.FirstOrDefault(item => item.icon == true);
                                        string imageDataUrl = firstImage != null ? $"data:image/jpeg;base64,{firstImage.imageData}" : "/img/default-image.jpg";
                                    }
                                    <img src="@imageDataUrl" alt="" class="img-fluid rounded" style="max-width: 100px; max-height: 100px;">
                                </div>
                                <div class="col-9">
                                    <h3 class="text-dark"><a href="@Url.Action("Detail", "Product", new{id=book.bookId})" class="text-decoration-none">@book.bookName</a></h3>
                                    <div class="row justify-content-between align-items-center" style="padding: 8px 0;">
                                        <div class="col">ISBN: @book.isbn</div>
                                        <div class="col">Tác giả: @book.author</div> <!-- Corrected from @book.isbn to @book.author -->
                                        @{
                                            var category = "";
                                            foreach (Category item in book.categories)
                                            {
                                                category += item.categoryName + ", ";
                                            }
                                            category = category.TrimEnd(',', ' ');
                                        }
                                        <div class="col">Thể loại: @category</div>
                                    </div>
                                    <div class="row justify-content-between align-items-center" style="padding: 8px 0;">
                                        <div class="col">Nhà xuất bản: @book.publisher</div>
                                        <div class="col">Giá bán: @book.sellPrice</div>
                                        <div class="col">Mô tả: @book.description</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer text-center" style="padding: 8px;">
                        <a href="#">Xem thêm</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


        <!-- Content Row -->
        <div class="row mt-3">

            <!-- User Accounts Column -->
            <div class="col-lg-6 mb-4">
                <!-- User Account Card -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Tài khoản người dùng</h6>
                    </div>
                    <div class="card-body" style="height: 500px; overflow-y: auto;">
                        @foreach (var item in ViewBag.Users)
                        {
                            <div class="user-card row mb-2" style="background-color: antiquewhite; padding: 10px; border-radius: 5px;">
                                <div class="col-2 text-center">
                                    <img src="/img/avatar.jpg" alt="Avatar" style="width: 100px; height: 100px; border-radius: 50%;">
                                </div>
                                <div class="col-8" style="padding-left: 15px;">
                                    <div class="user-info">
                                        <div class="font-weight-bold">Người dùng: @item.firstName</div>
                                        <div class="mt-2">Tên đăng nhập: @item.username</div>
                                        <div class="mt-1">
                                            Mật khẩu:
                                            @if (!string.IsNullOrEmpty(item.password))
                                            {
                                                string maskedPassword = new string('*', Math.Min(8, item.password.Length));
                                                if (item.password.Length > 8)
                                                {
                                                    maskedPassword += "...";
                                                }
                                                @maskedPassword
                                            }
                                            else
                                            {
                                                @("Không có mật khẩu")
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-2 d-flex justify-content-center align-items-center">
                                    <form method="post" action="@Url.Action("UpdateBlock", "Home")" style="display: inline;">
                                        <input type="hidden" name="userId" value="@item.userId" />
                                        <input type="hidden" name="isBlock" value="@(!item.isBlock)" />
                                        <button type="submit" style="background: none; border: none; cursor: pointer;">
                                            @if (item.isBlock)
                                            {
                                                <i class="fa-solid fa-lock" style="font-size: 30px;"></i>
                                            }
                                            else
                                            {
                                                <i class="fa-solid fa-lock-open" style="font-size: 30px;"></i>
                                            }
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer text-center" style="padding: 8px;">
                        <a href="#">Xem thêm</a>
                    </div>
                </div>
            </div>

            <!-- Order History Column -->
            <div class="col-lg-6 mb-4">
                <!-- Order History Card -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Lịch sử đặt hàng</h6>
                    </div>
                    <div class="card-body" style="height: 500px; overflow: auto;">
                        <table class="table table-bordered" id="dataTable" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Mã đơn hàng</th>
                                    <th>Ngày đặt hàng</th>
                                    <th>Khách hàng</th>
                                    <th>Thành tiền</th>
                                    <th>Phí ship</th>
                                    <th>Tổng tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in ViewBag.Orders)
                                {
                                    <tr>
                                        <td>@order.orderId</td>
                                        <td>@order.deliveryDate?.ToString("dd/MM/yyyy")</td>
                                        <td>@order.user.firstName</td>
                                        <td>@order.TotalAmount</td>
                                        <td>Free ship</td>
                                        <td>@(order.TotalAmount.ToString("N0")) </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-center" style="padding: 8px;">
                        <a href="#">Xem thêm</a>
                    </div>
                </div>
            </div>

        </div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.0/signalr.min.js"></script>
<script>
    function deleteSelectedProducts() {
        // Lấy tất cả các checkbox được chọn
        const selectedCheckboxes = document.querySelectorAll('input[type="checkbox"]:checked');

        // Lấy ID của những sản phẩm được chọn
        const selectedIds = [];
        selectedCheckboxes.forEach(checkbox => {
            const bookId = checkbox.closest('.row').getAttribute('data-book-id');
            if (bookId) {
                selectedIds.push(parseInt(bookId)); // Đảm bảo ID là số nguyên
            }
        });

        if (selectedIds.length > 0) {
            // Gửi request DELETE tới backend với danh sách ID sản phẩm
            fetch('/Product/deleteProducts', {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(selectedIds),
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Sản phẩm đã được xóa thành công!');
                        // Tải lại trang hoặc cập nhật lại giao diện nếu cần
                        location.reload();
                    } else {
                        alert('Xóa sản phẩm thất bại: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Đã có lỗi xảy ra!');
                });
        } else {
            alert('Vui lòng chọn ít nhất một sản phẩm để xóa.');
        }
    }
                async function updateBlock(userId, isBlock) {
                    try {
                        const response = await fetch('@Url.Action("UpdateBlock", "Home")', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ userId, isBlock })
                        });

                        if (response.ok) {
                            location.reload();
                        } else {
                            console.error('Failed to update block status');
                        }
                    } catch (error) {
                        console.error('An error occurred:', error);
                    }
                }


</script>